<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        id          = "2102704"
        version     = "1.0.0" >

	    <name>Color Burst</name>

	    <description>
	        A simple yet addictive game that sends a burst of color to your screen.
	    </description>

	    <author href="http://www.danelsonrosa.com" email="hello@danelsonrosa.com">
	        Danelson Rosa
	    </author>

			<platform name="ios" />

			<preference name="orientation" value="portrait" />
			<preference name="fullscreen" value="false" />
			<preference name="exit-on-suspend" value="true" />

			<!-- iPhone 6 / 6+ -->
			<icon src="images/res/icon/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

			<!-- iPhone / iPod Touch  -->
			<icon src="images/res/icon/ios/icon-60.png" platform="ios" width="60" height="60" />
			<icon src="images/res/icon/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

			<!-- iPad -->
			<icon src="images/res/icon/ios/icon-76.png" platform="ios" width="76" height="76" />
			<icon src="images/res/icon/ios/icon-76@2x.png" platform="ios" width="152" height="152" />

			<!-- Settings Icon -->
			<icon src="images/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
			<icon src="images/res/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

			<!-- Spotlight Icon -->
			<icon src="images/res/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
			<icon src="images/res/icon/ios/icon-40@2x.png" platform="ios" width="80" height="80" />

			<!-- iPhone / iPod Touch -->
			<icon src="images/res/icon/ios/icon.png" platform="ios" width="57" height="57" />
			<icon src="images/res/icon/ios/icon@2x.png" platform="ios" width="114" height="114" />

			<!-- iPad -->
			<icon src="images/res/icon/ios/icon-72.png" platform="ios" width="72" height="72" />
			<icon src="images/res/icon/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

			<!-- iPhone Spotlight and Settings Icon -->
			<icon src="images/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
			<icon src="images/res/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

			<!-- iPad Spotlight and Settings Icon -->
			<icon src="images/res/icon/ios/icon-50.png" platform="ios" width="50" height="50" />
			<icon src="images/res/icon/ios/icon-50@2x.png" platform="ios" width="100" height="100" />
		</widget>
