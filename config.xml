<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        id          = "2102704"
        version     = "1.0.0" >

	    <name>Color Burst</name>
	    <description>
	        A simple yet addictive game that sends a burst of color to your
          screen.
	    </description>
	    <author href="http://www.danelsonrosa.com" email="hello@danelsonrosa.com">
	        Danelson Rosa
	    </author>
      <access origin="*" subdomains="true" />
			<platform name="ios" />
			<preference name="orientation" value="portrait" />
			<preference name="fullscreen" value="true" />

      <!-- iOS 7.0+ -->

      <!-- iPhone 6 / 6+ -->
      <icon src="images/res/icon/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

      <!-- iPhone / iPod Touch  -->
      <icon src="images/res/icon/ios/icon-60.png" platform="ios" width="60" height="60" />
      <icon src="images/res/icon/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

      <!-- iPad -->
      <icon src="images/res/icon/ios/icon-76.png" platform="ios" width="76" height="76" />
      <icon src="images/res/icon/ios/icon-76@2x.png" platform="ios" width="152" height="152" />

      <!-- Settings Icon -->
      <icon src="images/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
      <icon src="images/res/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

      <!-- Spotlight Icon -->
      <icon src="images/res/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
      <icon src="images/res/icon/ios/icon-40@2x.png" platform="ios" width="80" height="80" />

      <!-- iOS 6.1 -->

      <!-- iPhone / iPod Touch -->
      <icon src="images/res/icon/ios/icon.png" platform="ios" width="57" height="57" />
      <icon src="images/res/icon/ios/icon@2x.png" platform="ios" width="114" height="114" />

      <!-- iPad -->
      <icon src="images/res/icon/ios/icon-72.png" platform="ios" width="72" height="72" />
      <icon src="images/res/icon/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="images/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
      <icon src="images/res/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

      <!-- iPad Spotlight and Settings Icon -->
      <icon src="images/res/icon/ios/icon-50.png" platform="ios" width="50" height="50" />
      <icon src="images/res/icon/ios/icon-50@2x.png" platform="ios" width="100" height="100" />

      <!-- iPhone and iPod touch -->
      <splash src="images/res/splash/ios/Default.png" platform="ios" width="320" height="480" />
      <splash src="images/res/splash/ios/Default@2x.png" platform="ios" width="640" height="960" />

      <!-- iPhone 5 / iPod Touch (5th Generation) -->
      <splash src="images/res/splash/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />

      <!-- iPhone 6 -->
      <splash src="images/res/splash/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
      <splash src="images/res/splash/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
      <splash src="images/res/splash/ios/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />

      <!-- iPad -->
      <splash src="images/res/splash/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
      <splash src="images/res/splash/ios/Default-Landscape.png" platform="ios" width="1024" height="768" />

      <!-- Retina iPad -->
      <splash src="images/res/splash/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
      <splash src="images/res/splash/ios/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
		</widget>
